@page
@model ClassManagement.Pages.IndexModel
@{
    ViewData["Title"] = "Class Management";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">
    <div class="row">
        <!-- Form Alanı -->
        <div class="col-md-4">
            <h4>Add New Class</h4>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Class Name</label>
                    <input type="text" asp-for="NewClass.ClassName" class="form-control">
                    <span class="text-danger" asp-validation-for="NewClass.ClassName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Student Count</label>
                    <input type="number" asp-for="NewClass.StudentCount" class="form-control">
                    <span class="text-danger" asp-validation-for="NewClass.StudentCount"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea asp-for="NewClass.Description" class="form-control"></textarea>
                </div>
                <button type="submit" asp-page-handler="Add" class="btn btn-primary">Add Class</button>
            </form>
        </div>

        <!-- Tablo Alanı -->
        <div class="col-md-8">
            <h4>Class List</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Class Name</th>
                        <th>Student Count</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in IndexModel.ClassList)

                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.ClassName</td>
                            <td>@item.StudentCount</td>
                            <td>@item.Description</td>
                            <td>
                                <form method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" asp-page-handler="Edit" class="btn btn-warning btn-sm">Edit</button>
                                </form>
                                <form method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" asp-page-handler="Delete" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
